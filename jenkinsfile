pipeline {
    agent any

    tools {
		maven 'my-maven'
		jdk 'my-jdk'
	}

    stages {
        stage('Git') {
            steps {
                echo 'Git clone done'
                git url:'https://github.com/Yamini6302/book-service.git', branch:'main'
            }
        }
         stage('Build') {
            steps {
                echo 'Build done'
                bat "mvn clean install -DskipTests"
            }
         }
           stage('Deploy') {
            steps {
                echo 'Deploy done'
		bat "docker rm book-container"
		bat "docker rmi book-img"
                 bat "docker build -t book-img ."
			             bat "docker run -p 9999:9999 -d --name book-container book-img"
            }

        }

    }

}
